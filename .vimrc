execute pathogen#infect()
syntax on 
set number
set tabstop=4
set shiftwidth=4
set smarttab
set autoindent
set showtabline=0 
set noshowmode
set laststatus=2
colorscheme jellybeans
set relativenumber
filetype plugin indent on
let g:airline_left_sep=''
let g:airline_right_sep=''
let g:airline_theme='ubaryd'
let g:airline_powerline_fonts=1
let g:bufferline_echo=0

noremap h j
noremap t k
noremap n h
noremap s l

noremap j n
noremap k t
noremap l s
