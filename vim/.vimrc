execute pathogen#infect()
syntax on 
set tabstop=4
set shiftwidth=4
set smarttab
set autoindent
set showtabline=0 
set noshowmode
set laststatus=2
colorscheme jellybeans
set relativenumber
filetype plugin indent on
let g:airline_left_sep=''
let g:airline_right_sep=''
let g:airline_theme='ubaryd'
let g:airline_powerline_fonts=1
let g:bufferline_echo=0

set mouse=a
map <ScrollWheelUp> <C-Y>
map <ScrollWheelDown> <C-E>

noremap h j
noremap t k
noremap n h
noremap s l

noremap j n
noremap k t
noremap l s

noremap H J
noremap T K
noremap N H
noremap S L

noremap J N
noremap K T
noremap L S

noremap [ 7
noremap [ 7

noremap { 5
noremap 5 {

noremap } 3
noremap 3 }

noremap ( 1
noremap 1 (

noremap = 9
noremap 9 =

noremap * 0
noremap 0 *

noremap ) 2
noremap 2 )

noremap + 4
noremap 4 +

noremap ] 6
noremap 6 ]

noremap 8 !
noremap ! 8
